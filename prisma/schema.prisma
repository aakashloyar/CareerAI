generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?
  emailVerified Boolean   @default(false)
  profileImage  String?
  lastLogin     DateTime?
  firstName     String?
  lastName      String?
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  sessionId String   @unique
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, sessionId])
}
